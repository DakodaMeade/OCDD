@{
    // Reviews view
    // Displays hardcoded made up reviews with pictures that use bootstraps carousel for browsing pictures
    ViewData["Title"] = "Reviews";
}
<div class="container mt-5">
    <!-- Review Section 1 -->
    <div class="row mb-5">
        <div class="col-md-4">
            <!-- Carousel 1 -->
            <div id="carouselExample1" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/review1-1.jpg" class="d-block w-100 rounded" alt="Review 1 Image 1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/review1-2.jpg" class="d-block w-100 rounded" alt="Review 1 Image 2">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/review1-3.jpg" class="d-block w-100 rounded" alt="Review 1 Image 3">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExample1" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExample1" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-8 d-flex align-items-center">
            <div>
                <h3>"Outstanding Service!"</h3>
                <p>The team at One Clean Dude Detailing really knows their stuff. My car looks brand new every time! Highly recommend.</p>
                <p>- John Doe</p>
            </div>
        </div>
    </div>

    <!-- Review Section 2 -->
